<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="#FFF2F2F2" >  
    
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

	<TextView
		android:id="@+id/id_text"
		android:layout_width="50sp"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:padding="2sp"
		android:singleLine="false"
		android:text="ID"
		android:textColor="#ff333333"
		android:textSize="12sp"
		android:visibility="gone" />
	
	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

	<TextView
		android:id="@+id/pc_text"
		android:layout_width="70sp"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:padding="2sp"
		android:singleLine="false"
		android:text="PC"
		android:textColor="#ff333333"
		android:textSize="12sp"
		android:visibility="gone" />

	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

	<TextView
		android:id="@+id/crc_text"
		android:layout_width="70sp"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:padding="2sp"
		android:singleLine="false"
		android:text="CRC"
		android:textColor="#ff333333"
		android:textSize="12sp"
		android:visibility="gone" />

	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

	<TextView
		android:id="@+id/epc_text"
		android:layout_width="200sp"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:padding="2sp"
		android:singleLine="false"
		android:text="EPC"
		android:textColor="#ff333333"
		android:textSize="12sp" />

	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

	<TextView
		android:id="@+id/data_text"
		android:layout_width="80sp"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:padding="2sp"
		android:singleLine="false"
		android:text="@string/access_list_data"
		android:textColor="#ff333333"
		android:textSize="12sp" />

	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />
					
	<TextView
	    android:id="@+id/data_len_text"
		android:layout_width="80sp"
		android:layout_height="wrap_content"
		android:padding="2sp"
		android:textSize="12sp"
		android:textColor="#ff333333"
		android:gravity="center_horizontal|center_vertical"
		android:singleLine="false"
		android:text="@string/access_list_data_len" />

	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

	<TextView
		android:id="@+id/antenna_text"
		android:layout_width="80sp"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:padding="2sp"
		android:singleLine="false"
		android:text="@string/list_antenna_port"
		android:textColor="#ff333333"
		android:textSize="12sp"
		android:visibility="gone" />

	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

	<TextView
		android:id="@+id/times_text"
		android:layout_width="80sp"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:padding="2sp"
		android:singleLine="false"
		android:text="@string/access_list_times"
		android:textColor="#ff333333"
		android:textSize="12sp"
		android:visibility="gone" />
	
	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />
    
</LinearLayout>